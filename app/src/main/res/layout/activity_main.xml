<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onerays.bhavna.oneraysrechargeapp.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="402dp"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/scrollView2">




        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/proImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/face"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Welcome palu"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"
                    app:layout_anchor="@+id/scrollView2"
                    app:layout_anchorGravity="top|center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/recharge"
                    android:layout_width="153dp"
                    android:layout_height="150dp"
                    android:background="#00000000"
                    android:baselineAligned="false"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/recharge" />

                <ImageButton
                    android:id="@+id/dth"
                    android:layout_width="139dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:baselineAligned="false"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/dishtv" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Mobile"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DTH"
                    android:textAlignment="center"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/landline"
                    android:layout_width="179dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/landline" />

                <ImageButton
                    android:id="@+id/addCard"
                    android:layout_width="172dp"
                    android:layout_height="175dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/addcard" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Landline"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Card"
                    android:textAlignment="center"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/profile" />


                <ImageButton
                    android:id="@+id/db"
                    android:layout_width="182dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:onClick="onButtonClicker"
                    android:scaleType="centerInside"
                    android:src="@drawable/subscriptions" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subscriptions"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</android.support.design.widget.CoordinatorLayout>